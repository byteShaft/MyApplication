<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khalid.myapplication2.NotificationsFragment">

    <Button
        android:id="@+id/buying_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buying notifications"
        android:gravity="center|start"
        android:textSize="13sp"
        android:paddingLeft="5dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/ripple"
        android:textAllCaps="false"/>

    <View
        android:id="@+id/notification_sep1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/buying_notification"/>


    <Button
        android:id="@+id/general_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="General notifications"
        android:gravity="center|start"
        android:textSize="13sp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/notification_sep1"
        android:background="@drawable/ripple"
        android:textAllCaps="false"/>

    <View
        android:id="@+id/notification_sep2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/general_notification"/>

    <Button
        android:id="@+id/customize_sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customize sounds"
        android:gravity="center|start"
        android:textSize="13sp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/notification_sep2"
        android:background="@drawable/ripple"
        android:textAllCaps="false"/>

    <View
        android:id="@+id/notification_sep3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/customize_sound"/>


    <RelativeLayout
        android:id="@+id/swtc_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_sep3"
        android:padding="6dp">

        <Switch
            android:id="@+id/quiet_times"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quiet times"
            android:gravity="center|left"
            android:textSize="13sp"
            android:textAllCaps="false"/>

        <TextView
            android:layout_below="@id/quiet_times"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:text="Notifications are not silenced"/>

    </RelativeLayout>


    <View
        android:id="@+id/notification_sep4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/swtc_rl"/>

















</RelativeLayout>
